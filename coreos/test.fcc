variant: fcos
version: 1.0.0
systemd:
  units:
  - name: run-k3s-installer.service
    enabled: true
    contents: |
      [Unit]
      After=network-online.target
      Wants=network-online.target
      [Service]
      Type=oneshot
      ExecStart=/bin/sh -c "curl -sfL https://get.k3s.io | sh -"
      [Install]
      WantedBy=multi-user.target
passwd:
  users:
    - name: core
      groups: ["wheel", "sudo"]
      ssh_authorized_keys:
        - ssh-rsa  linusexner@Linuss-MacBook-Air.local
